---
import type { CollectionEntry } from "astro:content";
import Layout from "./Layout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { createSEO } from "@/utils/seo";
import type { SEOProps } from "@/utils/seo";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;

const seo: SEOProps = createSEO({
  pageName: title,
  description: description,
  publishDate: new Date(pubDate),
  updateDate: updatedDate ? new Date(updatedDate) : undefined,
  image: heroImage,
  contentType: "blog",
  pathname: "/blog"
});
---

<Layout seo={seo}>
  <div class="min-h-screen">
    <!-- Breadcrumb & Meta -->
    <section class="pt-32 pb-8 px-6">
      <div class="max-w-3xl mx-auto">
        <div class="flex items-center gap-2 text-sm text-muted-foreground mb-6">
          <a href="/blog" class="hover:text-primary-400 transition-colors">Blog</a>
          <span class="text-border">/</span>
          <span class="truncate">{title}</span>
        </div>

        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-foreground leading-tight">{title}</h1>

        <div class="flex flex-wrap items-center gap-3 mb-6">
          <span class="inline-flex items-center px-3 py-1 rounded-full bg-primary-500/10 text-primary-400 text-sm font-medium">
            <FormattedDate date={pubDate} />
          </span>
          {updatedDate && (
            <span class="inline-flex items-center px-3 py-1 rounded-full bg-muted text-muted-foreground text-sm">
              Updated: <FormattedDate date={updatedDate} />
            </span>
          )}
        </div>

        {description && (
          <p class="text-lg text-muted-foreground leading-relaxed">{description}</p>
        )}
      </div>
    </section>

    <!-- Hero Image -->
    {heroImage && (
      <div class="max-w-4xl mx-auto px-6 pb-8">
        <div class="overflow-hidden rounded-2xl border border-border shadow-lg">
          <img
            width={1020}
            height={510}
            src={heroImage}
            alt={title}
            class="w-full h-auto object-cover"
          />
        </div>
      </div>
    )}

    <!-- Article Content -->
    <article class="max-w-3xl mx-auto px-6 py-8">
      <div class="blog-content text-foreground">
        <slot />
      </div>

      <!-- Footer Bar -->
      <div class="mt-16 pt-8 border-t border-border">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
          <a href="/blog" class="inline-flex items-center text-primary-400 hover:text-primary-300 transition-colors text-sm font-medium gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to all articles
          </a>
          <div class="flex items-center gap-3">
            <span class="text-xs text-muted-foreground">Share:</span>
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-primary-400 transition-colors"
            >
              <span class="sr-only">Share on Twitter</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z" />
              </svg>
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-primary-400 transition-colors"
            >
              <span class="sr-only">Share on LinkedIn</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </article>
  </div>
</Layout>
