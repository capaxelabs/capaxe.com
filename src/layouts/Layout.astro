---
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import WhatsAppButton from "@/components/WhatsAppButton.astro";
import { siteConfig } from "@/config/site";
import "@/styles/global.css";
import "@calcom/atoms/globals.min.css";
import { Toaster } from "sonner";
import type { SEOProps } from "@/utils/seo";

interface Props {
  seo?: SEOProps;
  title?: string;
  description?: string;
}

// Default SEO values or use provided individual props for backward compatibility
const { seo, title = siteConfig.name, description = siteConfig.description } = Astro.props;

// If individual title/description are provided but no seo object, create a basic seo object
const seoData: SEOProps = seo || {
  title: title,
  description: description,
};
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead seo={seoData} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <Toaster />
    <WhatsAppButton />
  </body>
</html>
