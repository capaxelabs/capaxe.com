---
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import Layout from "../../layouts/Layout.astro";
import CTABottom from "@/components/CTA.astro";
const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title={`Blog | ${SITE_TITLE}`} description="Our blog posts">
  <div class="min-h-screen bg-background">
    <section class="pt-32 pb-16 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Our Blog</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Read our latest blog posts and stay updated on the latest trends in the industry.</p>
      </div>
    </section>
    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            posts.map((post) => (
              <div class="relative bg-white rounded-lg overflow-hidden shadow-md">
                <a href={`/blog/${post.id}/`}>
                  <img width={720} height={360} src={post.data.heroImage} alt="" />
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
  <CTABottom />
</Layout>
