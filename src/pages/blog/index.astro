---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import Layout from "../../layouts/Layout.astro";
import CTABottom from "@/components/CTA.astro";
import { createSEO } from "@/utils/seo";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const seo = createSEO({
  pageName: "Shopify Development Blog",
  description: "Guides, tutorials, and insights on Shopify development, custom app building, Liquid templating, headless commerce, and e-commerce best practices.",
  keywords: "Shopify development blog, Shopify tutorials, Liquid templating, Shopify app development, headless commerce, e-commerce guides",
  image: "/images/blog-hero.jpg",
  contentType: "basic",
  pathname: "/blog"
});

const featuredPost = posts[0];
const regularPosts = posts.slice(1);
---

<Layout seo={seo}>
  <div class="min-h-screen">
    <!-- Hero -->
    <section class="pt-32 pb-12 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="bento-tile-accent text-center py-16">
          <span class="inline-block px-3 py-1 rounded-full bg-white/10 text-white/80 text-xs font-medium mb-4 border border-white/20">
            Insights & Articles
          </span>
          <h1 class="text-5xl md:text-6xl font-bold mb-4">Our Blog</h1>
          <p class="text-lg text-white/60 max-w-2xl mx-auto">
            Insights, updates, and expert perspectives on Shopify development, e-commerce, and the latest industry trends.
          </p>
        </div>
      </div>
    </section>

    {
      featuredPost && (
        <section class="pb-6 px-6">
          <div class="max-w-7xl mx-auto">
            <h2 class="text-sm font-semibold text-muted-foreground uppercase tracking-wider mb-4 pl-1">Featured Post</h2>
            <a href={`/blog/${featuredPost.id}/`} class="block group">
              <div class="bento-tile p-0 overflow-hidden">
                <div class="md:flex">
                  <div class="md:w-1/2 overflow-hidden">
                    <img
                      width={720}
                      height={360}
                      src={featuredPost.data.heroImage}
                      alt={featuredPost.data.title}
                      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105 min-h-[280px]"
                    />
                  </div>
                  <div class="md:w-1/2 p-8 md:p-10 flex flex-col justify-center">
                    <div class="mb-4">
                      <span class="inline-flex items-center px-2.5 py-1 rounded-full bg-primary-500/10 text-primary-400 text-xs font-medium">
                        <FormattedDate date={featuredPost.data.pubDate} />
                      </span>
                    </div>
                    <h3 class="text-2xl md:text-3xl font-bold mb-4 text-foreground group-hover:text-primary-400 transition-colors leading-tight">
                      {featuredPost.data.title}
                    </h3>
                    <p class="text-muted-foreground mb-6 line-clamp-3 text-sm leading-relaxed">
                      {featuredPost.data.description}
                    </p>
                    <span class="inline-flex items-center text-primary-400 text-sm font-medium group-hover:gap-2 transition-all gap-1">
                      Read article
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </section>
      )
    }

    <section class="py-8 px-6 pb-20">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-sm font-semibold text-muted-foreground uppercase tracking-wider mb-6 pl-1">Latest Articles</h2>
        <div class="bento-grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
          {
            regularPosts.map((post) => (
              <a href={`/blog/${post.id}/`} class="bento-tile group p-0 overflow-hidden flex flex-col">
                <div class="overflow-hidden h-48">
                  <img
                    width={720}
                    height={360}
                    src={post.data.heroImage}
                    alt={post.data.title}
                    class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                  />
                </div>
                <div class="p-6 flex-1 flex flex-col">
                  <div class="mb-3">
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full bg-primary-500/10 text-primary-400 text-xs font-medium">
                      <FormattedDate date={post.data.pubDate} />
                    </span>
                  </div>
                  <h3 class="text-lg font-bold mb-2 text-foreground group-hover:text-primary-400 transition-colors leading-snug">
                    {post.data.title}
                  </h3>
                  {post.data.description && (
                    <p class="text-muted-foreground line-clamp-2 text-sm mb-4 leading-relaxed">{post.data.description}</p>
                  )}
                  <div class="mt-auto pt-4 border-t border-border">
                    <span class="inline-flex items-center text-primary-400 text-sm font-medium group-hover:gap-2 transition-all gap-1">
                      Read article
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </span>
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </section>
  </div>
  <CTABottom />
</Layout>
