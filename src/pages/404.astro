---
import Layout from "@/layouts/Layout.astro";
import { createSEO } from "@/utils/seo";

const seo = createSEO({
  pageName: "404: Not Found",
  description: "The page you're looking for doesn't exist.",
  pathname: "/404",
  contentType: "error"
});
---

<Layout seo={seo}>
  <section class="min-h-[80vh] flex items-center justify-center px-6">
    <div class="max-w-lg mx-auto">
      <div class="bento-tile text-center py-16">
        <h1 class="text-8xl lg:text-9xl font-extrabold text-primary-500 mb-6">404</h1>
        <p class="text-2xl font-bold text-foreground mb-3">Something's missing.</p>
        <p class="text-muted-foreground mb-8">
          Sorry, we can't find that page. You'll find lots to explore on the home page.
        </p>
        <a
          href="/"
          class="inline-flex items-center bg-primary-500 hover:bg-primary-600 text-white font-medium rounded-xl text-sm px-6 py-3 transition-colors"
        >
          Back to Homepage
        </a>
      </div>
    </div>
  </section>
</Layout>
