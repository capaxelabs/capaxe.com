---
import Layout from "@/layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import CTABottom from "@/components/CTA.astro";
import { caseStudies } from "@/config/caseStudy";
import { createSEO } from "@/utils/seo";
import type { SEOProps } from "@/utils/seo";

interface Props {
  seo?: SEOProps;
  title?: string;
  description?: string;
}

const seo = createSEO({
  pageName: `Case Studies | ${siteConfig.name}`,
  description: "Explore our detailed case studies and success stories",
  contentType: "service",
  pathname: "/case-studies",
});
---

<Layout seo={seo}>
  <div class="min-h-screen bg-background">
    <section class="pt-32 pb-16 px-4 bg-gradient-to-b from-white to-primary-50">
      <div class="max-w-6xl mx-auto text-center">
        <span class="inline-block px-3 py-1 rounded-full bg-primary-200 text-primary-700 text-xs font-medium mb-4 animate-fade-in">
          Success Stories
        </span>
        <h1 class="text-5xl md:text-6xl font-display font-bold mb-6 text-gray-900 animate-fade-in">Case Studies</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8 animate-fade-in">
          Explore how we've helped businesses achieve their goals through innovative solutions
        </p>
      </div>
    </section>

    <!-- Case Studies Grid -->
    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8">
          {
            caseStudies.map((study) => (
              <div class="bg-white rounded-xl overflow-hidden shadow-lg">
                <div class="p-8">
                  <div class="flex justify-between items-start mb-6">
                    <div>
                      <h2 class="text-2xl font-bold mb-2">{study.title}</h2>
                      <p class="text-primary-600 font-medium">{study.client}</p>
                    </div>
                    <a href={study.pdfUrl} download class="flex items-center gap-2 text-primary-600 hover:text-primary-700">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"
                        />
                      </svg>
                      <span>Download PDF</span>
                    </a>
                  </div>

                  <p class="text-gray-600 mb-6">{study.description}</p>

                  <div class="grid grid-cols-3 gap-4 mb-6">
                    {Object.entries(study.metrics).map(([key, value]) => (
                      <div class="bg-primary-50 p-4 rounded-lg text-center">
                        <div class="text-2xl font-bold text-primary-600">{value}</div>
                        <div class="text-sm text-gray-600">{key.replace(/([A-Z])/g, " $1").trim()}</div>
                      </div>
                    ))}
                  </div>

                  <a href={`/case-studies/${study.id}`} class="inline-block">
                    <button class="bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors">
                      View Full Case Study
                    </button>
                  </a>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
    <CTABottom />
  </div>
</Layout>
