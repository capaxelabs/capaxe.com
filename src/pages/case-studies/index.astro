---
import Layout from "@/layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import CTABottom from "@/components/CTA.astro";
import { getCollection } from "astro:content";
import { createSEO } from "@/utils/seo";
import type { SEOProps } from "@/utils/seo";

interface Props {
  seo?: SEOProps;
  title?: string;
  description?: string;
}

const caseStudies = await getCollection("caseStudies");

const seo = createSEO({
  pageName: `Case Studies | ${siteConfig.name}`,
  description: "Explore our detailed case studies and success stories",
  contentType: "service",
  pathname: "/case-studies",
});
---

<Layout seo={seo}>
  <div class="min-h-screen bg-background">
    <section class="pt-32 pb-16 px-4 h-[50vh] flex items-center bg-gradient-to-b from-white to-primary-50">
      <div class="max-w-6xl mx-auto text-center">
        <span class="inline-block px-3 py-1 rounded-full bg-primary-200 text-primary-700 text-xs font-medium mb-4 animate-fade-in">
          Success Stories
        </span>
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-gray-900 animate-fade-in">Case Studies</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8 animate-fade-in">
          Explore how we've helped businesses achieve their goals through innovative solutions
        </p>
      </div>
    </section>

    <!-- Case Studies Grid -->
    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8">
          {
            caseStudies.map((study) => (
              <div class="bg-white rounded-xl overflow-hidden shadow-lg">
                <div class="p-8">
                  <div class="flex items-start mb-6">
                    <div class="flex-shrink-0 mr-4">
                      <img 
                        src={study.data.logos?.client?.src || `/logos/clients/${study.data.client.toLowerCase().replace(/[^a-z0-9]/g, '-')}.png`} 
                        alt={study.data.logos?.client?.alt || study.data.client} 
                        class="h-12 w-auto client-logo-card"
                      />
                    </div>
                    <div class="flex-1">
                      <h2 class="text-2xl font-bold mb-2">{study.data.title}</h2>
                      <p class="text-primary-600 font-medium">{study.data.client}</p>
                    </div>
                  </div>

                  <p class="text-gray-600 mb-6">{study.data.description}</p>

                  <div class="mb-6">
                    <div class="flex flex-wrap gap-2">
                      {study.data.techStack.slice(0, 3).map((tech) => (
                        <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded">{tech}</span>
                      ))}
                      {study.data.techStack.length > 3 && (
                        <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded">+{study.data.techStack.length - 3} more</span>
                      )}
                    </div>
                  </div>

                  <a href={`/case-studies/${study.id}`} class="inline-block">
                    <button class="bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors cursor-pointer">
                      View Full Case Study
                    </button>
                  </a>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
    <CTABottom />
  </div>
</Layout>

<style>
  .client-logo-card {
    transition: opacity 0.3s ease;
    object-fit: contain;
  }
</style>

<script>
  // Handle logo fallbacks for case study cards
  document.addEventListener('DOMContentLoaded', function() {
    const clientLogos = document.querySelectorAll('.client-logo-card');
    clientLogos.forEach(img => {
      img.addEventListener('error', function() {
        const baseSrc = this.src.replace(/\.(png|jpg|jpeg|svg|webp|avif)$/, '');
        const formats = ['webp', 'avif', 'svg', 'jpg', 'jpeg'];
        
        let formatIndex = 0;
        const tryNextFormat = () => {
          if (formatIndex < formats.length) {
            this.src = baseSrc + '.' + formats[formatIndex];
            formatIndex++;
          } else {
            // All formats failed, hide the image
            this.style.display = 'none';
          }
        };
        
        this.onerror = tryNextFormat;
        tryNextFormat();
      });
    });
  });
</script>
