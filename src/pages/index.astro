---
import Layout from "@/layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import { StickyCards, ServiceLanding } from "@/components/home/HomeComponents";
import RetainerPlansSection from "@/components/RetainerPlan";
import HeroSection from "@/components/home/HeroSection.astro";
import ClientLogos from "@/components/home/ClientLogos";
import { createSEO } from "@/utils/seo";
import { getEnhancedOrganizationSchema } from "@/lib/schemas";

const seo = createSEO({
  pageName: "Shopify Development Agency | Custom Apps & Stores",
  description: "Capaxe Labs builds custom Shopify apps, headless storefronts, and payment integrations for growing e-commerce businesses. Based in Mumbai, serving clients globally.",
  keywords: "Shopify development agency, custom Shopify apps, headless Shopify, Shopify Plus development, Shopify store development",
  contentType: "basic",
  pathname: "/",
});
seo.structuredData = getEnhancedOrganizationSchema();
---

<Layout seo={seo}>
  <div class="min-h-screen">
    <HeroSection />

    <div class="reveal-on-scroll">
      <ClientLogos siteConfig={siteConfig} client:load />
    </div>

    <div class="max-w-7xl mx-auto px-6">
      <div class="h-px bg-gradient-to-r from-transparent via-border to-transparent"></div>
    </div>

    <StickyCards siteConfig={siteConfig} client:load />

    <div class="max-w-7xl mx-auto px-6">
      <div class="h-px bg-gradient-to-r from-transparent via-border to-transparent"></div>
    </div>

    <ServiceLanding siteConfig={siteConfig} client:load />

    <div class="max-w-7xl mx-auto px-6">
      <div class="h-px bg-gradient-to-r from-transparent via-border to-transparent"></div>
    </div>

    <div class="reveal-on-scroll">
      <RetainerPlansSection client:load />
    </div>
  </div>
</Layout>
