---
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import ContactFormReact from "@/components/ContactFormReact";
import ChatContactForm from "@/components/ChatContactForm";
import { createSEO } from "@/utils/seo";

const seo = createSEO({
  pageName: `Contact Us | ${siteConfig.name}`,
  description: "Get in touch with our team. Choose between our traditional form or chat-style inquiry.",
  contentType: "service",
  pathname: "/contact",
});
---

<Layout seo={seo}>
  <div class="min-h-screen">
    <!-- Hero -->
    <section class="pt-32 pb-8 px-6">
      <div class="max-w-7xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-4 text-foreground">
          Get In Touch
        </h1>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Ready to start your project? Choose how you'd like to connect with us.
        </p>
      </div>
    </section>

    <!-- Contact Content -->
    <section class="pb-20 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-5 gap-4 items-start">
          <!-- Chat Form (larger) -->
          <div class="lg:col-span-3">
            <div class="bento-tile">
              <h2 class="text-2xl font-bold text-foreground mb-2">Quick Chat Inquiry</h2>
              <p class="text-muted-foreground text-sm mb-6">
                Have a quick conversation with our AI assistant to get started.
              </p>
              <ChatContactForm client:load />
            </div>
          </div>

          <!-- Contact Info Tiles -->
          <div class="lg:col-span-2 flex flex-col gap-4">
            <div class="bento-tile">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-primary-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-foreground text-sm">Email</h4>
                  <p class="text-muted-foreground text-sm">contact@capaxe.com</p>
                  <p class="text-xs text-muted-foreground mt-1">We'll respond within 24 hours</p>
                </div>
              </div>
            </div>

            <div class="bento-tile">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-green-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-foreground text-sm">WhatsApp</h4>
                  <p class="text-muted-foreground text-sm">+91 (7019) 620-967</p>
                  <p class="text-xs text-muted-foreground mt-1">Quick responses during business hours</p>
                </div>
              </div>
            </div>

            <div class="bento-tile">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-blue-500/20 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-foreground text-sm">Schedule a Call</h4>
                  <p class="text-muted-foreground text-sm">Book a free consultation</p>
                  <p class="text-xs text-muted-foreground mt-1">Monday-Friday, 9 AM - 6 PM IST</p>
                </div>
              </div>
            </div>

            <!-- Why Choose Us tile -->
            <div class="bento-tile-accent">
              <h4 class="font-semibold mb-4">Why Choose Capaxe Labs?</h4>
              <ul class="space-y-2.5 text-sm text-white/70">
                <li class="flex items-center gap-2">
                  <span class="text-white/50">&#10003;</span>
                  5+ years of Shopify expertise
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-white/50">&#10003;</span>
                  50+ successful projects delivered
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-white/50">&#10003;</span>
                  24/7 support and maintenance
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-white/50">&#10003;</span>
                  Custom solutions for your business
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
