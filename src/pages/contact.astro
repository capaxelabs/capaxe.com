---
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import ContactFormReact from "@/components/ContactFormReact";
import ChatContactForm from "@/components/ChatContactForm";
import { createSEO } from "@/utils/seo";

const seo = createSEO({
  pageName: `Contact Us | ${siteConfig.name}`,
  description: "Get in touch with our team. Choose between our traditional form or chat-style inquiry.",
  contentType: "service",
  pathname: "/contact",
});
---

<Layout seo={seo}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-primary-50/30">
    <!-- Hero Section -->
    <section class="pt-32 pb-16 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-purple-700 via-blue-600 to-teal-500">
          Get In Touch
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-12">
          Ready to start your project? Choose how you'd like to connect with us.
        </p>
      </div>
    </section>

    <!-- Contact Options -->
    <section class="pb-20 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-start">
          <!-- Chat Form Section -->
          <div>
            <div class="mb-8">
              <h2 class="text-3xl font-bold text-foreground mb-4">Quick Chat Inquiry</h2>
              <p class="text-muted-foreground">
                Have a quick conversation with our AI assistant to get started. It's fast, friendly, and gets us the right information.
              </p>
            </div>
            <ChatContactForm client:load />
          </div>

          <!-- Contact Information -->
          <div class="lg:sticky lg:top-32">
            <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">Other Ways to Reach Us</h3>
              
              <div class="space-y-6">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-blue-500 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">Email</h4>
                    <p class="text-gray-600">hello@capaxelabs.com</p>
                    <p class="text-sm text-gray-500">We'll respond within 24 hours</p>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-teal-500 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">WhatsApp</h4>
                    <p class="text-gray-600">+1 (555) 123-4567</p>
                    <p class="text-sm text-gray-500">Quick responses during business hours</p>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">Schedule a Call</h4>
                    <p class="text-gray-600">Book a free consultation</p>
                    <p class="text-sm text-gray-500">Available Monday-Friday, 9 AM - 6 PM EST</p>
                  </div>
                </div>
              </div>

              <div class="mt-8 pt-8 border-t border-gray-100">
                <h4 class="font-semibold text-gray-900 mb-4">Why Choose Capaxe Labs?</h4>
                <ul class="space-y-2 text-sm text-gray-600">
                  <li class="flex items-center gap-2">
                    <span class="text-green-500">✓</span>
                    5+ years of Shopify expertise
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="text-green-500">✓</span>
                    50+ successful projects delivered
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="text-green-500">✓</span>
                    24/7 support and maintenance
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="text-green-500">✓</span>
                    Custom solutions for your business
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

