---
import Layout from "@/layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import RetainerPlansSection from "@/components/RetainerPlan";
import BenefitSection from "@/components/BenefitSection";
import CTABottom from "@/components/CTA.astro";

import { createSEO } from "@/utils/seo";
import type { SEOProps } from "@/utils/seo";

interface Props {
  seo?: SEOProps;
  title?: string;
  description?: string;
}

const seo = createSEO({
  pageName: `Retainer Plans | ${siteConfig.name}`,
  description: "Choose from our flexible retainer plans designed to provide continuous improvements and support for your Shopify store.",
  keywords: "Retainer Plans, Shopify, Capaxe Labs",
  pathname: "/retainer",
});
---

<Layout seo={seo}>
  <div class="min-h-screen">
    <section class="pt-32 pb-16 min-h-[60vh] px-4 bg-gradient-to-b from-white to-primary-50 flex items-center">
      <div class="max-w-6xl mx-auto text-center">
        <span class="inline-block px-3 py-1 rounded-full bg-primary-200 text-primary-700 text-xs font-medium mb-4 animate-fade-in">
          Membership Plans
        </span>
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-gray-900 animate-fade-in">Join Our Shopify Success Community</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8 animate-fade-in">
          Get dedicated development support, strategic guidance, and priority service with our flexible membership plans designed specifically for
          growing Shopify stores.
        </p>
      </div>
    </section>
    <BenefitSection client:load />
    <RetainerPlansSection client:load />

    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="bg-gray-50 p-8 rounded-2xl">
          <h2 class="text-3xl font-bold mb-4">Why Choose a Retainer Plan?</h2>
          <div class="grid md:grid-cols-3 gap-8 mt-8">
            <div class="bg-white p-6 rounded-xl shadow-sm">
              <h3 class="text-xl font-semibold mb-3">Ongoing Support</h3>
              <p class="text-gray-600">
                Get reliable, consistent support for your Shopify store with dedicated experts who understand your business.
              </p>
            </div>
            <div class="bg-white p-6 rounded-xl shadow-sm">
              <h3 class="text-xl font-semibold mb-3">Predictable Costs</h3>
              <p class="text-gray-600">Budget effectively with fixed monthly or yearly rates, avoiding unexpected development expenses.</p>
            </div>
            <div class="bg-white p-6 rounded-xl shadow-sm">
              <h3 class="text-xl font-semibold mb-3">Priority Service</h3>
              <p class="text-gray-600">Enjoy faster response times and priority scheduling for your Shopify store needs.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 px-4 bg-gray-50">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Frequently Asked Questions</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <h3 class="text-xl font-semibold mb-3">What's included in the retainer hours?</h3>
            <p class="text-gray-600">
              Retainer hours can be used for development, maintenance, bug fixes, feature enhancements, and consultations related to your Shopify
              store.
            </p>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <h3 class="text-xl font-semibold mb-3">Can I roll over unused hours?</h3>
            <p class="text-gray-600">
              Unused hours typically expire at the end of each month, but we can discuss rollover options for specific circumstances.
            </p>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <h3 class="text-xl font-semibold mb-3">How do I request changes or support?</h3>
            <p class="text-gray-600">Retainer clients have access to a dedicated support channel where you can submit requests and track progress.</p>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <h3 class="text-xl font-semibold mb-3">Can I upgrade my plan later?</h3>
            <p class="text-gray-600">Yes, you can upgrade your retainer plan at any time as your business needs grow.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Ready to Get Started?</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
          Take the next step towards growing your Shopify store with our expert team by your side.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/consultation">
            <button class="px-6 py-3 bg-primary-500 text-white rounded-lg font-medium hover:bg-primary-600 transition-colors">
              Book a Consultation
            </button>
          </a>
          <a href="/case-studies">
            <button class="px-6 py-3 bg-gray-100 text-gray-800 rounded-lg font-medium hover:bg-gray-200 transition-colors">
              View Our Case Studies
            </button>
          </a>
        </div>
      </div>
    </section>
    <CTABottom />
  </div>
</Layout>
