---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE } from "../consts";
import { siteConfig } from "@/config/site";
---

<Layout title={`Retainer Plans | ${SITE_TITLE}`} description="Our retainer plans for ongoing support and development">
  <div class="bg-white pt-40">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">Capaxe Shopify Retainer Plans ðŸš€</h1>
        <p class="mt-4 text-xl text-gray-500 max-w-3xl mx-auto">
          Get dedicated Shopify support to scale your business. Whether you need ongoing app maintenance, custom development, or store optimization,
          we've got you covered.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 mt-16">
        {
          siteConfig.retainer.items.map((item: any, index: number) => (
            <div key={index} class="bg-white rounded-2xl shadow-xl p-8 border-2 border-purple-100 hover:border-purple-500 transition-all">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">{item.title}</h3>
              <div class="flex items-baseline text-gray-900">
                <span class="text-5xl font-extrabold tracking-tight">{item.monthly}</span>
                <span class="ml-1 text-2xl font-semibold">/month</span>
                <span class="ml-2 text-gray-500">({item.yearly}/Year)</span>
              </div>
              <p class="mt-4 text-gray-500">{item.description}</p>
              <ul class="mt-6 space-y-4">
                {item.features.map((feature: any, index: number) => (
                  <li key={index} class="flex items-start">
                    <span class="text-purple-600 mr-2">âœ…</span>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
              <div class="mt-6 text-center">
                <a href="/contact" class="inline-block px-6 py-3 bg-purple-600 text-white rounded-full hover:bg-purple-700 transition-colors">
                  Get Started
                </a>
              </div>
            </div>
          ))
        }

        <div class="mt-16 text-center">
          <p class="text-xl font-semibold text-gray-900">ðŸ“Œ Need more hours?</p>
          <p class="mt-2 text-gray-500">
            Custom retainers are availableâ€”
            <a href="/contact" class="text-purple-600 hover:text-purple-500"> let's talk! </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>
