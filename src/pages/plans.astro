---
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import { createSEO } from "@/utils/seo";

const seo = createSEO({
    pageName: `Plans | ${siteConfig.name}`,
    description: "Choose from our flexible retainer plans designed to provide continuous improvements and support for your Shopify store.",
    contentType: "service",
    pathname: "/plans",
});

const plans = [
  {
    name: "Starter – 15h",
    description: "Perfect for small businesses or new Shopify stores needing reliable, on-demand support and improvements.",
    price: "$960",
    originalPrice: "$1,200",
    period: "/month",
    billingNote: "Billed annually (20% discount)",
    popular: false,
    features: [
      "Monthly strategy meetings",
      "Monthly website audits",
      "Cancel anytime",
      "Real-time chat support",
      "Non-urgent: reply within 48h",
      "Critical issues: immediate action",
      "Most tasks completed in 24h",
      "Dedicated PM & Shopify developer",
      "Project collaboration in ClickUp or your preferred tool",
      "Regular progress & performance updates"
    ]
  },
  {
    name: "Growth – 30h",
    description: "Best for growing businesses with more complex Shopify needs, including CRO and advanced support.",
    price: "$1666",
    originalPrice: "$1,999",
    period: "/month",
    billingNote: "Billed annually (20% discount)",
    popular: true,
    features: [
      "On-request growth strategy meetings",
      "On-request website audits",
      "Regular CRO audits with actionable insights",
      "Cancel anytime",
      "Real-time chat support",
      "Priority response within 24h",
      "Critical issues: immediate action",
      "Most tasks completed in 24h",
      "Dedicated PM & Tech Lead",
      "Dedicated & backup Shopify developer",
      "Project collaboration in ClickUp or your preferred tool",
      "Regular progress & performance updates"
    ]
  },
  {
    name: "Enterprise – 50h",
    description: "Tailored for high-growth or large Shopify businesses with demanding, ongoing dev & design needs.",
    price: "$2560",
    originalPrice: "$3,200",
    period: "/month",
    billingNote: "Billed annually (20% discount)",
    popular: false,
    features: [
      "Frequent growth strategy sessions (2-3/mo)",
      "Weekly website audits",
      "Advanced CRO audits & best practices for conversion growth",
      "Cancel anytime",
      "Real-time chat support",
      "Priority initial response within 12h",
      "Critical issues: immediate action",
      "Most tasks resolved within 12h",
      "Senior PM & Tech Lead",
      "2 dedicated & 2 backup Shopify developers",
      "Project collaboration in ClickUp or your preferred tool",
      "Regular progress & performance updates"
    ]
  }
];
---

<Layout seo={seo}>
  <section class="min-h-screen pt-32 pb-16 px-6">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <span class="inline-block px-3 py-1 rounded-full bg-primary-500/20 text-primary-400 text-xs font-medium mb-4 border border-primary-500/30">
          Retainer Plans
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">
          Ongoing Support for Your Success
        </h1>
        <p class="text-muted-foreground max-w-2xl mx-auto">
          Choose from our flexible retainer plans designed to provide continuous improvements and support for your Shopify store.
        </p>
      </div>

      <!-- Toggle -->
      <div class="flex justify-center mb-12">
        <div class="inline-flex rounded-full p-1 bg-foreground/5 border border-border">
          <button type="button" class="px-5 py-2 rounded-full text-sm font-medium text-muted-foreground hover:text-foreground transition-colors">
            Quarterly <span class="text-xs font-bold text-primary-400">Save 10%</span>
          </button>
          <button type="button" class="px-5 py-2 rounded-full text-sm font-medium bg-foreground/10 text-foreground">
            Yearly <span class="text-xs font-bold text-primary-400">Save 20%</span>
          </button>
        </div>
      </div>

      <!-- Plans Grid -->
      <div class="bento-grid grid-cols-1 md:grid-cols-3">
        {plans.map((plan) => (
          <div class={`relative overflow-hidden flex flex-col ${plan.popular ? 'bento-tile-accent' : 'bento-tile'}`}>
            {plan.popular && (
              <span class="absolute top-4 right-4 bg-white/20 text-white text-xs font-medium px-3 py-1 rounded-full">
                Popular
              </span>
            )}
            <div class="flex-1 flex flex-col">
              <h3 class={`text-xl font-semibold mb-2 ${plan.popular ? 'text-white' : 'text-foreground'}`}>{plan.name}</h3>
              <p class={`text-sm mb-6 ${plan.popular ? 'text-white/60' : 'text-muted-foreground'}`}>{plan.description}</p>

              <div class="mb-6">
                <div class="flex items-baseline">
                  <span class={`text-4xl font-bold ${plan.popular ? 'text-white' : 'text-foreground'}`}>{plan.price}</span>
                  <span class={`text-lg ml-2 ${plan.popular ? 'text-white/50' : 'text-muted-foreground'}`}>{plan.period}</span>
                </div>
                <div class="flex items-baseline mt-1">
                  <span class={`text-sm line-through ${plan.popular ? 'text-white/30' : 'text-muted-foreground'}`}>{plan.originalPrice} /month</span>
                </div>
                <p class={`text-xs mt-2 ${plan.popular ? 'text-white/40' : 'text-muted-foreground'}`}>{plan.billingNote}</p>
              </div>

              <ul class="space-y-2.5 mb-8 flex-1">
                {plan.features.map((feature) => (
                  <li class="flex items-start">
                    <span class={`mr-2 text-sm flex-shrink-0 ${plan.popular ? 'text-white/50' : 'text-primary-400'}`}>&#10003;</span>
                    <span class={`text-sm ${plan.popular ? 'text-white/70' : 'text-muted-foreground'}`}>{feature}</span>
                  </li>
                ))}
              </ul>

              <button
                class={`w-full py-2.5 rounded-xl text-sm font-medium transition-colors ${plan.popular
                  ? 'bg-white text-primary-600 hover:bg-gray-100'
                  : 'bg-primary-500/20 text-primary-300 hover:bg-primary-500/30 border border-primary-500/30'
                }`}
              >
                {plan.popular ? 'Get Started' : 'Learn More'}
              </button>
            </div>
          </div>
        ))}
      </div>

      <!-- Custom Plan -->
      <div class="bento-tile mt-4 text-center">
        <h3 class="text-2xl font-semibold mb-3 text-foreground">Need a Custom Plan?</h3>
        <p class="text-muted-foreground mb-6 max-w-2xl mx-auto text-sm">
          We understand that every business has unique needs. Contact us to discuss a custom
          retainer plan tailored specifically to your Shopify store requirements.
        </p>
        <a href="/contact" class="inline-flex items-center bg-primary-500 hover:bg-primary-600 text-white font-medium rounded-xl text-sm px-6 py-3 transition-colors">
          Contact Us for Custom Plans
        </a>
      </div>
    </div>
  </section>
</Layout>
