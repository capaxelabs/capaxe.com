---
import Layout from "../../layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import ServiceCTA from "@/components/ServiceCTA";
import CTABottom from "@/components/CTA.astro";
import { createSEO } from "@/utils/seo";

// Page-specific SEO metadata using the utility
// const seo = createServiceSEO({
const seo = createSEO({
  pageName: "Shopify Maintenance",
  description: "Shopify Maintenance Services",
  keywords: "shopify maintenance, ecommerce maintenance, website maintenance, shopify support, e-commerce maintenance",
  image: "/images/services/shopify-maintenance.jpg" // Make sure this image exists in your public folder
});

// Override structuredData if needed
seo.structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Shopify Maintenance",
  "description": seo.description,
  "provider": {
    "@type": "Organization",
    "name": siteConfig.name,
    "url": siteConfig.url
  },
  "serviceType": "Shopify Maintenance",
  "areaServed": "Worldwide"
};
---

<Layout seo={seo} >
  <div class="p-6 pt-32 bg-gray-50 min-h-screen flex flex-col items-center">
    <section class="pt-32 pb-16 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">Shopify Development Services</h1>
        <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">Custom Shopify solutions to help your business grow online</p>
      </div>
    </section>
    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
          {/* Custom Theme Development */}
          <div class="bg-purple-50 rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">Custom Theme Development</h3>
            <p class="mt-2 text-gray-500">Unique, responsive themes tailored to your brand and business needs.</p>
          </div>

          {/* App Development */}
          <div class="bg-purple-50 rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">App Development</h3>
            <p class="mt-2 text-gray-500">Custom Shopify apps to extend your store's functionality.</p>
          </div>

          {/* Store Optimization */}
          <div class="bg-purple-50 rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">Store Optimization</h3>

            <p class="mt-2 text-gray-500">Performance optimization and conversion rate improvements.</p>
          </div>
        </div>
      </div>
    </section>
    <ServiceCTA />
  </div>
  <CTABottom />
</Layout>
