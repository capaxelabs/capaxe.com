---
import Layout from "@/layouts/Layout.astro";
import { SITE_TITLE } from "@/consts";
---

<Layout title={`E-commerce Solutions | ${SITE_TITLE}`} description="E-commerce Solutions">
  <div class="bg-white">
    <div class="max-w-7xl mx-auto pt-32 py-16 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">E-commerce Solutions</h1>
        <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">Complete e-commerce solutions to power your online business</p>
      </div>

      <div class="mt-16">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
          {/* Platform Development */}
          <div class="bg-purple-50 rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">Platform Development</h3>
            <p class="mt-2 text-gray-500">Custom e-commerce platforms built for your specific business needs.</p>
          </div>

          {/* Integration Services */}
          <div class="bg-purple-50 rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">Integration Services</h3>
            <p class="mt-2 text-gray-500">Seamless integration with payment gateways, shipping providers, and third-party services.</p>
          </div>

          {/* Analytics & Optimization */}
          <div class="bg-purple-50 rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">Analytics & Optimization</h3>
            <p class="mt-2 text-gray-500">Data-driven optimization to improve conversion rates and customer experience.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
