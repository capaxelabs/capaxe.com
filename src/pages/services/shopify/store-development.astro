---
import { FiCode, FiLayers, FiServer, FiBox } from "react-icons/fi";
import { Button } from "@/components/ui/button";
import CTABottom from "@/components/CTA.astro";
import Layout from "@/layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import ServiceCTA from "@/components/ServiceCTA";
import { createSEO } from "@/utils/seo";
import type { SEOProps } from "@/utils/seo";

interface Props {
  seo?: SEOProps;
  title?: string;
  description?: string;
}

// Page-specific SEO metadata using the utility
const seo = createSEO({
  pageName: "Store Development",
  description: "Custom Shopify Store Development",
  keywords: "shopify store development, custom shopify stores, shopify development services, e-commerce store development",
  image: "/images/services/store-development.jpg",
  contentType: "service",
  pathname: "/services/store-development"
});

// Override structuredData if needed
seo.structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Store Development",
  "description": seo.description,
  "provider": {
    "@type": "Organization",
    "name": siteConfig.name,
    "url": siteConfig.url
  },
  "serviceType": "Store Development",
  "areaServed": "Worldwide"
};
---

<Layout seo={seo} >
  <div class="p-6 pt-32 bg-gray-50 min-h-screen flex flex-col items-center">
    <section class="pt-32 pb-16 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Custom Shopify Store Development</h1>
        <p class="text-lg text-gray-600 text-center max-w-2xl mb-8">
          Build a powerful and engaging Shopify store tailored to your business needs. Whether you prefer a traditional Liquid theme or a modern
          headless approach, we’ve got you covered.
        </p>
      </div>
    </section>

    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiCode className="text-4xl text-blue-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Liquid Theme Development</h2>
            <p class="text-gray-600">
              Craft visually stunning Shopify stores using Liquid, Shopify's native templating language, for optimized performance and seamless
              integration.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiLayers className="text-4xl text-green-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Hydrogen + Oxygen Deployment</h2>
            <p class="text-gray-600">
              Build modern, fast, and personalized storefronts using Hydrogen and deploy them on Shopify’s Oxygen hosting platform for unmatched
              scalability.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiServer className="text-4xl text-purple-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Headless Storefront Development</h2>
            <p class="text-gray-600">
              Leverage frameworks like Next.js, React.js, and Remix to create fully headless Shopify stores, offering ultimate flexibility and speed.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiBox className="text-4xl text-yellow-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Custom Features & Integrations</h2>
            <p class="text-gray-600">
              Enhance your store with tailor-made features and seamless integrations to align with your unique business objectives.
            </p>
          </div>
        </div>

        <h2 class="text-3xl font-bold text-gray-800 mb-4">Why Choose Us?</h2>
        <p class="text-lg text-gray-600 text-center max-w-3xl mb-8">
          From traditional Liquid themes to cutting-edge headless solutions, we provide end-to-end Shopify store development services. Our expertise
          in Hydrogen and Oxygen ensures that your storefront is fast, scalable, and future-ready.
        </p>
      </div>
    </section>
    <ServiceCTA />
  </div>
  <CTABottom />
</Layout>
