---
import { FiCode, FiLayers, FiServer, FiBox } from "react-icons/fi";
import CTABottom from "@/components/CTA.astro";
import Layout from "@/layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import ServiceCTA from "@/components/ServiceCTA";
import { createSEO } from "@/utils/seo";
import type { SEOProps } from "@/utils/seo";

interface Props {
  seo?: SEOProps;
  title?: string;
  description?: string;
}

const seo = createSEO({
  pageName: "Store Development",
  description: "End-to-end custom Shopify store development â€” Liquid theme builds, Hydrogen headless storefronts, and full store setup by Capaxe Labs.",
  keywords: "shopify store development, custom shopify stores, shopify development services, e-commerce store development",
  image: "/images/services/store-development.jpg",
  contentType: "service",
  pathname: "/services/store-development"
});

seo.structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Store Development",
  "description": seo.description,
  "provider": {
    "@type": "Organization",
    "name": siteConfig.name,
    "url": siteConfig.url
  },
  "serviceType": "Store Development",
  "areaServed": "Worldwide"
};
---

<Layout seo={seo}>
  <div class="min-h-screen">
    <!-- Hero -->
    <section class="pt-32 pb-8 px-6">
      <div class="max-w-7xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">Custom Shopify Store Development</h1>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Build a powerful and engaging Shopify store tailored to your business needs. Whether you prefer a traditional Liquid theme or a modern
          headless approach, we've got you covered.
        </p>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="pb-8 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="bento-grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
          <div class="bento-tile md:col-span-2">
            <FiCode className="text-3xl text-primary-400 mb-4" />
            <h2 class="text-xl font-semibold text-foreground mb-2">Liquid Theme Development</h2>
            <p class="text-sm text-muted-foreground">
              Craft visually stunning Shopify stores using Liquid, Shopify's native templating language, for optimized performance and seamless integration.
            </p>
          </div>
          <div class="bento-tile-accent">
            <FiLayers className="text-3xl text-white/80 mb-4" />
            <h2 class="text-xl font-semibold mb-2">Hydrogen + Oxygen Deployment</h2>
            <p class="text-sm text-white/70">
              Build modern, fast, and personalized storefronts using Hydrogen and deploy them on Shopify's Oxygen hosting platform.
            </p>
          </div>
          <div class="bento-tile">
            <FiServer className="text-3xl text-purple-400 mb-4" />
            <h2 class="text-xl font-semibold text-foreground mb-2">Headless Storefront Development</h2>
            <p class="text-sm text-muted-foreground">
              Leverage frameworks like Next.js, React.js, and Remix to create fully headless Shopify stores, offering ultimate flexibility and speed.
            </p>
          </div>
          <div class="bento-tile">
            <FiBox className="text-3xl text-amber-400 mb-4" />
            <h2 class="text-xl font-semibold text-foreground mb-2">Custom Features & Integrations</h2>
            <p class="text-sm text-muted-foreground">
              Enhance your store with tailor-made features and seamless integrations to align with your unique business objectives.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose -->
    <section class="pb-8 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="bento-tile-muted text-center py-10">
          <h2 class="text-3xl font-bold text-foreground mb-3">Why Choose Us?</h2>
          <p class="text-muted-foreground max-w-3xl mx-auto">
            From traditional Liquid themes to cutting-edge headless solutions, we provide end-to-end Shopify store development services. Our expertise
            in Hydrogen and Oxygen ensures that your storefront is fast, scalable, and future-ready.
          </p>
        </div>
      </div>
    </section>

    <ServiceCTA />
  </div>
  <CTABottom />
</Layout>
