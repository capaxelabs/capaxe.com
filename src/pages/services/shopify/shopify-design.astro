---
import { FiLayout, FiMonitor, FiSmartphone, FiPenTool } from "react-icons/fi";
import { Button } from "@/components/ui/button";
import CTABottom from "@/components/CTA.astro";
import Layout from "@/layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import ServiceCTA from "@/components/ServiceCTA";
import { createSEO } from "@/utils/seo";
import type { SEOProps } from "@/utils/seo";

interface Props {
  seo?: SEOProps;
  title?: string;
  description?: string;
}

// Page-specific SEO metadata using the utility
const seo = createSEO({
  pageName: "Shopify Design Services",
  description: "Professional Shopify design services to create stunning, conversion-focused storefronts that reflect your brand identity and drive sales.",
  keywords: "shopify design, ecommerce design, UI/UX design, responsive design, mobile-friendly design, custom shopify themes",
  image: "/images/services/shopify-design.jpg",
  contentType: "service",
  pathname: "/services/shopify-design"
});

// Override structuredData if needed
seo.structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Shopify Design Services",
  "description": seo.description,
  "provider": {
    "@type": "Organization",
    "name": siteConfig.name,
    "url": siteConfig.url
  },
  "serviceType": "Web Design",
  "areaServed": "Worldwide"
};
---

<Layout seo={seo}>
  <div class="p-6 pt-32 bg-gray-50 min-h-screen flex flex-col items-center">
    <section class="pt-32 pb-16 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Shopify Design Services</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Create a stunning, conversion-focused Shopify store that reflects your brand identity and drives sales with our professional design services.
        </p>
      </div>
    </section>

    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiLayout className="text-4xl text-purple-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Custom Theme Design</h2>
            <p class="text-gray-600">
              Unique, responsive themes tailored to your brand identity and business goals.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiMonitor className="text-4xl text-blue-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">UI/UX Design</h2>
            <p class="text-gray-600">
              User-centered design that enhances customer experience and increases conversions.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiSmartphone className="text-4xl text-green-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Responsive Design</h2>
            <p class="text-gray-600">
              Mobile-friendly designs that provide a seamless experience across all devices.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiPenTool className="text-4xl text-orange-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Brand Identity</h2>
            <p class="text-gray-600">
              Cohesive visual identity including logos, color schemes, and typography.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 px-4 bg-white">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Our Design Process</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-gray-50 p-6 rounded-xl shadow-sm">
            <div class="text-purple-600 text-4xl font-bold mb-4">1</div>
            <h3 class="text-xl font-semibold mb-3">Discovery & Research</h3>
            <p class="text-gray-600">
              We start by understanding your brand, target audience, and business goals to create a design strategy that aligns with your vision.
            </p>
          </div>
          <div class="bg-gray-50 p-6 rounded-xl shadow-sm">
            <div class="text-purple-600 text-4xl font-bold mb-4">2</div>
            <h3 class="text-xl font-semibold mb-3">Wireframing & Prototyping</h3>
            <p class="text-gray-600">
              We create wireframes and interactive prototypes to visualize the user journey and optimize the shopping experience.
            </p>
          </div>
          <div class="bg-gray-50 p-6 rounded-xl shadow-sm">
            <div class="text-purple-600 text-4xl font-bold mb-4">3</div>
            <h3 class="text-xl font-semibold mb-3">Visual Design & Implementation</h3>
            <p class="text-gray-600">
              We develop the final visual design and implement it on your Shopify store, ensuring it's pixel-perfect and fully responsive.
            </p>
          </div>
        </div>
      </div>
    </section>

    <ServiceCTA />
  </div>

  <CTABottom />
</Layout> 