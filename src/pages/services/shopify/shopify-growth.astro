---
import { FiTrendingUp, FiTarget, FiBarChart2, FiUsers } from "react-icons/fi";
import { Button } from "@/components/ui/button";
import CTABottom from "@/components/CTA.astro";
import Layout from "@/layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import ServiceCTA from "@/components/ServiceCTA";
import { createSEO } from "@/utils/seo";
import type { SEOProps } from "@/utils/seo";

interface Props {
  seo?: SEOProps;
  title?: string;
  description?: string;
}

// Page-specific SEO metadata using the utility
const seo = createSEO({
  pageName: "Shopify Growth & Strategy",
  description: "Strategic growth services for Shopify stores to increase traffic, improve conversion rates, and maximize revenue through data-driven optimization.",
  keywords: "shopify growth, ecommerce strategy, conversion rate optimization, revenue growth, shopify marketing, data-driven optimization",
  image: "/images/services/shopify-growth.jpg",
  contentType: "service",
  pathname: "/services/shopify-growth"
});

// Override structuredData if needed
seo.structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Shopify Growth & Strategy",
  "description": seo.description,
  "provider": {
    "@type": "Organization",
    "name": siteConfig.name,
    "url": siteConfig.url
  },
  "serviceType": "Business Strategy",
  "areaServed": "Worldwide"
};
---

<Layout seo={seo}>
  <div class="p-6 pt-32 bg-gray-50 min-h-screen flex flex-col items-center">
    <section class="pt-32 pb-16 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Shopify Growth & Strategy</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Accelerate your Shopify store's growth with our data-driven strategies designed to increase traffic, improve conversion rates, and maximize revenue.
        </p>
      </div>
    </section>

    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiTrendingUp className="text-4xl text-purple-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Growth Strategy</h2>
            <p class="text-gray-600">
              Comprehensive growth plans tailored to your business goals and target audience.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiTarget className="text-4xl text-blue-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Conversion Optimization</h2>
            <p class="text-gray-600">
              Data-driven improvements to increase your store's conversion rate and average order value.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiBarChart2 className="text-4xl text-green-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Analytics & Reporting</h2>
            <p class="text-gray-600">
              Detailed analytics setup and regular reporting to track performance and identify opportunities.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiUsers className="text-4xl text-orange-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Customer Retention</h2>
            <p class="text-gray-600">
              Strategies to increase customer lifetime value through loyalty programs and personalized experiences.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 px-4 bg-white">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Our Growth Approach</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-gray-50 p-6 rounded-xl shadow-sm">
            <div class="text-purple-600 text-4xl font-bold mb-4">1</div>
            <h3 class="text-xl font-semibold mb-3">Audit & Analysis</h3>
            <p class="text-gray-600">
              We conduct a comprehensive audit of your store to identify strengths, weaknesses, and growth opportunities.
            </p>
          </div>
          <div class="bg-gray-50 p-6 rounded-xl shadow-sm">
            <div class="text-purple-600 text-4xl font-bold mb-4">2</div>
            <h3 class="text-xl font-semibold mb-3">Strategy Development</h3>
            <p class="text-gray-600">
              We create a customized growth strategy with specific tactics and measurable goals based on our analysis.
            </p>
          </div>
          <div class="bg-gray-50 p-6 rounded-xl shadow-sm">
            <div class="text-purple-600 text-4xl font-bold mb-4">3</div>
            <h3 class="text-xl font-semibold mb-3">Implementation & Optimization</h3>
            <p class="text-gray-600">
              We implement the strategy, continuously monitor results, and make data-driven optimizations to maximize ROI.
            </p>
          </div>
        </div>
      </div>
    </section>

    <ServiceCTA />
  </div>

  <CTABottom />
</Layout> 