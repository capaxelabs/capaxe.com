---
import { FiCode, FiTool, FiCloud } from "react-icons/fi";
import { Button } from "@/components/ui/button";
import CTABottom from "@/components/CTA.astro";
import Layout from "@/layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import ServiceCTA from "@/components/ServiceCTA";
import { createSEO } from "@/utils/seo";
import type { SEOProps } from "@/utils/seo";

interface Props {
  seo?: SEOProps;
  title?: string;
  description?: string;
}
// Page-specific SEO metadata using the utility
const seo = createSEO({
  pageName: "Public App Development",
  description: "Public App Development",
  keywords: "public app development, shopify app development, e-commerce apps",
  image: "/images/services/public-app-development.jpg",
  contentType: "service",
  pathname: "/services/public-app-development"
});

// Override structuredData if needed
seo.structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Public App Development",
  "description": seo.description,
  "provider": {
    "@type": "Organization",
    "name": siteConfig.name,
    "url": siteConfig.url
  },
  "serviceType": "Public App Development",
  "areaServed": "Worldwide"
};
---

<Layout seo={seo} >
  <div class="p-6 pt-32 bg-gray-50 min-h-screen flex flex-col items-center">
    <section class="pt-32 pb-16 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Public App Development</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Take your Shopify store to the next level with our expert app development services. Whether it&apos;s a custom app tailored to your business
          needs or a public app designed to serve thousands of merchants, we&apos;ve got you covered.
        </p>
      </div>
    </section>

    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiCode className="text-4xl text-blue-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Custom App Development</h2>
            <p class="text-gray-600">
              Build apps tailored to your specific requirements, integrating unique features that make your store stand out.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiTool className="text-4xl text-green-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Public App Development</h2>
            <p class="text-gray-600">Create scalable public apps that can be listed on the Shopify App Store to reach a global audience.</p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiCloud className="text-4xl text-purple-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Seamless Integrations</h2>
            <p class="text-gray-600">Integrate third-party tools and services seamlessly into your Shopify store for enhanced functionality.</p>
          </div>
        </div>
      </div>
    </section>
    <ServiceCTA />
  </div>

  <CTABottom
    title="Ready to create your dream public app?"
    description="Contact us today to discuss your project and discover how we can help you achieve your goals."
  />
</Layout>
