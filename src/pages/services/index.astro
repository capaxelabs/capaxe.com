---
import Layout from "../../layouts/Layout.astro";
import { SITE_TITLE } from "../../consts";
import { motion } from "motion/react";
import { ShoppingBagIcon } from "@heroicons/react/24/outline";
import { siteConfig } from "@/config/site";
import CTABottom from "@/components/CTA.astro";
---

<Layout title={`Services | ${SITE_TITLE}`} description="Our professional services">
  <div class="min-h-screen bg-background">
    {/* Hero Section */}
    <section class="pt-32 pb-16 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Our Services</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          {siteConfig.services.description}
        </p>
      </div>
    </section>

    {/* Services Grid */}
    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            siteConfig.services.items.map((service: any, index: number) => (
              <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-shadow">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-6">
                  <ShoppingBagIcon className="w-6 h-6 text-purple-600" />
                </div>
                <h3 class="text-2xl font-semibold mb-4">{service.title}</h3>
                <p class="text-gray-600">{service.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>
    <CTABottom />
  </div>
</Layout>
