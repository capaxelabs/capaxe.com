---
import { FiCode, FiTool, FiCloud } from "react-icons/fi";
import { Button } from "@/components/ui/button";
import CTABottom from "@/components/CTA.astro";
import Layout from "@/layouts/Layout.astro";
import { siteConfig } from "@/config/site";
import { createSEO } from "@/utils/seo";
import type { SEOProps } from "@/utils/seo";

interface Props {
  seo?: SEOProps;
  title?: string;
  description?: string;
}
// Page-specific SEO metadata using the utility
const seo = createSEO({
  pageName: "Mobile App Development",
  description: "Professional mobile app development services for iOS and Android platforms, helping businesses create seamless mobile experiences for their customers.",
  keywords: "mobile app development, iOS app development, Android app development, cross-platform apps",
  image: "/images/services/mobile-app-development.jpg",
  contentType: "service",
  pathname: "/services/mobile-app-development"
});

// Override structuredData if needed
seo.structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Mobile App Development",
  "description": seo.description,
  "provider": {
    "@type": "Organization",
    "name": siteConfig.name,
    "url": siteConfig.url
  },
  "serviceType": "Mobile App Development",
  "areaServed": "Worldwide"
};
---

<Layout seo={seo}>
  <div class="p-6 pt-32 bg-gray-50 min-h-screen flex flex-col items-center">
    <section class="pt-32 pb-16 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Mobile App Development</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Take your Shopify store to the next level with our expert app development services. Whether it&apos;s a custom app tailored to your business
          needs or a public app designed to serve thousands of merchants, we&apos;ve got you covered.
        </p>
      </div>
    </section>

    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiCode className="text-4xl text-blue-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Mobile App Development</h2>
            <p class="text-gray-600">
              Build apps tailored to your specific requirements, integrating unique features that make your store stand out.
            </p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiTool className="text-4xl text-green-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Mobile App Development</h2>
            <p class="text-gray-600">Create scalable public apps that can be listed on the Shopify App Store to reach a global audience.</p>
          </div>
          <div class="bg-white shadow-lg rounded-lg p-6 text-center hover:shadow-2xl transition">
            <FiCloud className="text-4xl text-purple-500 mb-4 mx-auto" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Seamless Integrations</h2>
            <p class="text-gray-600">Integrate third-party tools and services seamlessly into your Shopify store for enhanced functionality.</p>
          </div>
        </div>
      </div>
    </section>

    <div class="flex flex-col sm:flex-row gap-4">
      <a href="/consultation">
        <Button className="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600"> Get a Free Consultation </Button>
      </a>
      <a href="/portfolio">
        <Button className="px-6 py-3 bg-gray-100 text-gray-800 rounded-lg hover:bg-gray-200"> View Our Portfolio </Button>
      </a>
    </div>
  </div>

  <CTABottom />
</Layout>
