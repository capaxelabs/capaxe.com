---
import Layout from "@/layouts/Layout.astro";
import { SITE_TITLE } from "@/consts";
import CTABottom from "@/components/CTA.astro";
---

<Layout title={`Technical Support | ${SITE_TITLE}`} description="Technical Support">
  <div class="bg-white">
    <div class="max-w-7xl mx-auto pt-32 py-16 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">Technical Support Services</h1>
        <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">24/7 expert technical support for your digital presence</p>
      </div>

      <div class="mt-16">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
          {/* 24/7 Support */}
          <div class="bg-purple-50 rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">24/7 Support</h3>
            <p class="mt-2 text-gray-500">Round-the-clock technical support for your critical business needs.</p>
          </div>

          {/* Maintenance */}
          <div class="bg-purple-50 rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">Maintenance Services</h3>
            <p class="mt-2 text-gray-500">Regular updates, security patches, and performance optimization.</p>
          </div>

          {/* Troubleshooting */}
          <div class="bg-purple-50 rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900">Expert Troubleshooting</h3>
            <p class="mt-2 text-gray-500">Quick resolution of technical issues and expert problem-solving.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <CTABottom />
</Layout>
