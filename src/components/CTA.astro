---
interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonUrl?: string;
}

const {
  title = "Ready to get started?",
  description = "Let's discuss how our retainer plans can help your business grow.",
  buttonText = "Contact us",
  buttonUrl = "/contact",
} = Astro.props;
---

<div class="px-6 py-4">
  <div class="max-w-7xl mx-auto">
    <div class="bento-tile-accent text-center py-12">
      <h2 class="text-3xl font-bold mb-3">{title}</h2>
      <p class="text-lg text-white/70 max-w-2xl mx-auto mb-6">{description}</p>
      <a
        href={buttonUrl}
        class="inline-flex items-center justify-center px-6 py-3 text-sm font-medium rounded-xl bg-white text-primary-600 hover:bg-gray-100 transition-colors"
      >
        {buttonText}
      </a>
    </div>
  </div>
</div>
