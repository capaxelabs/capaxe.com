---
import { siteConfig } from "@/config/site";
import { menuConfig } from "@/config/menu";
import ColorPaletteSwitcher from "@/components/ColorPaletteSwitcher";
const currentYear = new Date().getFullYear();
---

<footer class="bg-card border-t border-border">
  <div class="mx-auto max-w-7xl px-6 py-16 lg:px-8">
    <div class="bento-grid grid-cols-1 lg:grid-cols-4">
      <div class="bento-tile lg:col-span-1">
        <div class="flex items-center gap-2 mb-4">
          <img src="/logo.svg" alt="Capaxe Labs" class="w-10 h-10" />
          <a href="/" class="text-2xl font-bold text-foreground">
            {siteConfig.name}
          </a>
        </div>
        <p class="text-muted-foreground max-w-xs text-sm leading-relaxed">
          {siteConfig.description}
        </p>
      </div>

      <div class="bento-tile">
        <h3 class="text-sm font-semibold text-primary-400 uppercase tracking-wider">Solutions</h3>
        <ul class="mt-4 space-y-3">
          {
            siteConfig.services.shopify.items.map((item) => (
              <li>
                <a href={item.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="bento-tile">
        <h3 class="text-sm font-semibold text-primary-400 uppercase tracking-wider">Case Studies</h3>
        <ul class="mt-4 space-y-3">
          {
            menuConfig.footerNav.caseStudies.map((item) => (
              <li>
                <a href={item.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="bento-tile">
        <h3 class="text-sm font-semibold text-primary-400 uppercase tracking-wider">Company</h3>
        <ul class="mt-4 space-y-3">
          {
            menuConfig.footerNav.company.map((item) => (
              <li>
                <a href={item.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-border">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-sm text-muted-foreground">
          &copy; {currentYear}
          {siteConfig.name}. All rights reserved.
        </p>
        <div class="mt-4 md:mt-0">
          <ul class="flex space-x-6">
            {
              menuConfig.footerNav.legal.map((item) => (
                <li>
                  <a href={item.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                    {item.title}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>

<div class="fixed bottom-4 left-4 z-50">
  <ColorPaletteSwitcher client:load />
</div>
