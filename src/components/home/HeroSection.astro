---
import { ArrowRight } from "lucide-react";
import { Button } from "@/components/ui/button";
import ChatContactModal from "@/components/ChatContactModal";
---

<section class="min-h-[90vh] relative overflow-hidden flex items-center pt-20">
  <div class="absolute top-0 right-0 w-full h-full bg-primary-100 clip-path-slant -z-10"></div>
  <div class="absolute top-40 right-40 w-64 h-64 rounded-full bg-primary-300/20 blur-3xl -z-10 animate-float"></div>
  <div class="absolute bottom-40 left-20 w-96 h-96 rounded-full bg-primary-200/30 blur-3xl -z-10 animate-float"></div>

  <div class="container max-w-7xl mx-auto px-6 py-12 md:py-20">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="max-w-xl animate-fade-up">
        <span class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-yellow-200 text-primary-700 text-xs font-medium mb-6 border-2 border-amber-400">
          <span class="bg-red-500 text-white text-[10px] font-bold px-2 py-[2px] rounded-full uppercase">New</span>
          New to Shopify? Enjoy 30% off your store setup or migration!
        </span>
        <div class="flex items-center gap-4 mb-4">
          <img src="/shopify-expert.png" alt="Shopify Expert Badge" class="h-8 w-auto" loading="lazy" />
          <img src="/shopify-partner.png" alt="Shopify Partner Badge" class="h-8 w-auto" loading="lazy" />
          
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold leading-tight md:leading-tight mb-1">
          We Donâ€™t Just Build <span class="text-gradient">Shopify Stores</span>
          
        </h1>
        <span class="text-xl">We Build <span class="text-gradient">Shopify Powerhouses</span></span>
        <p class="text-lg text-gray-600 mb-8 max-w-lg mt-10">
          We build advanced Shopify solutions, from custom apps to headless storefronts, tailored to help your brand grow faster.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/case-studies">
            <Button size="lg" className="bg-primary-400 hover:bg-primary-500 text-white">
              View Our Work
              <ArrowRight className="ml-2 h-4 w-4" />
            </Button>
          </a>
          <ChatContactModal 
            client:load 
            className="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-3 rounded-lg font-medium hover:from-primary-700 hover:to-primary-800 transition-all duration-200 border-0 shadow-lg hover:shadow-xl"
          >
            ðŸ’¬ Start Your Project
          </ChatContactModal>
        </div>
      </div>

      <div class="relative animate-fade-in animation-delay-300">
        <div class="relative z-10 rounded-2xl overflow-hidden shadow-elegant">
          <img
            src="https://images.unsplash.com/photo-1556742031-c6961e8560b0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1287&q=80"
            alt="Shopify store showcase"
            class="w-full h-auto object-cover"
          />
        </div>
        <div class="absolute -bottom-6 -right-6 w-48 h-48 bg-primary-400/10 rounded-full blur-2xl -z-10"></div>
        <div class="absolute -top-6 -left-6 w-40 h-40 bg-primary-200/20 rounded-full blur-xl -z-10"></div>
      </div>
    </div>
  </div>
</section>
