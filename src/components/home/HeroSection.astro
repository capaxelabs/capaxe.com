---
import { ArrowRight } from "lucide-react";
import { Button } from "@/components/ui/button";
import ChatContactModal from "@/components/ChatContactModal";
---

<section class="min-h-[90vh] relative flex items-center pt-24 pb-8">
  <div class="container max-w-7xl mx-auto px-6">
    <div class="bento-grid grid-cols-1 md:grid-cols-4 md:grid-rows-2">
      <!-- Main Hero Tile (spans 3 cols, 2 rows) -->
      <div class="bento-tile-accent md:col-span-3 md:row-span-2 flex flex-col justify-between min-h-[420px] relative overflow-hidden">
        <div>
          <div class="flex items-center gap-3 mb-6 hero-animate">
            <img src="/shopify-expert.png" alt="Shopify Expert Badge" class="h-7 w-auto brightness-0 invert" loading="lazy" />
            <img src="/shopify-partner.png" alt="Shopify Partner Badge" class="h-7 w-auto brightness-0 invert" loading="lazy" />
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-2 hero-animate hero-animate-delay-1">
            We Don't Just Build<br />
            <span class="text-white/80">Shopify Stores</span>
          </h1>
          <p class="text-xl text-white/70 mt-2 hero-animate hero-animate-delay-2">
            We Build <span class="font-semibold text-white">Shopify Powerhouses</span>
          </p>
          <p class="text-base text-white/60 max-w-lg mt-6 hero-animate hero-animate-delay-3">
            We build advanced Shopify solutions, from custom apps to headless storefronts, tailored to help your brand grow faster.
          </p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3 mt-8 hero-animate hero-animate-delay-4">
          <a href="/case-studies">
            <Button size="lg" className="bg-white text-primary-600 hover:bg-gray-100 font-semibold rounded-xl btn-shimmer">
              View Our Work
              <ArrowRight className="ml-2 h-4 w-4" />
            </Button>
          </a>
          <ChatContactModal
            client:load
            className="bg-white/20 backdrop-blur-sm text-white px-6 py-3 rounded-xl font-medium hover:bg-white/30 transition-all duration-200 border border-white/20"
          >
            Start Your Project
          </ChatContactModal>
        </div>
        <!-- Decorative gradient overlay -->
        <div class="absolute -bottom-20 -right-20 w-80 h-80 bg-white/10 rounded-full blur-3xl pointer-events-none"></div>
      </div>

      <!-- Offer Badge Tile -->
      <div class="bento-tile flex flex-col justify-center items-center text-center hero-animate hero-animate-delay-3">
        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-amber-500/20 text-amber-400 text-xs font-medium mb-3 border border-amber-500/30">
          <span class="bg-red-500 text-white text-[9px] font-bold px-1.5 py-[1px] rounded-full uppercase">New</span>
          Offer
        </span>
        <p class="text-sm text-muted-foreground leading-relaxed">
          New to Shopify? Enjoy <span class="text-foreground font-semibold">30% off</span> your store setup or migration!
        </p>
      </div>

      <!-- Image Tile -->
      <div class="bento-tile p-0 overflow-hidden hero-animate hero-animate-delay-4">
        <img
          src="https://images.unsplash.com/photo-1556742031-c6961e8560b0?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
          alt="Shopify store showcase"
          class="w-full h-full object-cover min-h-[180px] rounded-2xl"
        />
      </div>
    </div>
  </div>
</section>
