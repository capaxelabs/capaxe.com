---
interface Props {
  date: Date | string | undefined;
}

const { date } = Astro.props;
const dateObj = date ? (date instanceof Date ? date : new Date(date)) : new Date();
---

<time datetime={dateObj.toISOString()}>
  {
    dateObj.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
